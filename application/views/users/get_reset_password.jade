- if ($finish_signup):
  h3 Create password for #{$user->email}
- else:
  h3 Reset password for #{$user->email}
- endif;

form.form-horizontal(action="#{route('reset_password', array($user->reset_password_token))}", method="POST")

  .control-group
    label.control-label New Password
    .controls
      input(type="password", name="password")

  .form-actions
    button.btn.btn-primary(type="submit") Submit
