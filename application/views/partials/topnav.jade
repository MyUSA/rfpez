div.nav-collapse.collapse

- if (Auth::check()):
  ul.nav
    - if (Auth::user()->officer):
      li
        a(href="#{ route('vendors') }", data-pjax) Vendors
      li
        a(href="#{ route('my_projects') }", data-pjax) Projects
    - else:
      li
        a(href="#{ route('my_bids') }", data-pjax) Bids
      li
        a(href="#{ route('projects') }", data-pjax) Projects
    - endif;

  ul.nav.pull-right
    li.dropdown
      a(href="#", class="dropdown-toggle", data-toggle="dropdown")
        | #{Auth::user()->email}
        b.caret

      ul.dropdown-menu
        li
          a(href="#{route('account')}", data-pjax) Account Settings
        li
          a(href="#{ route('signout') }", data-pjax) Sign Out

    li.dropdown.notification-nav-item
      a#notifications-dropdown-trigger.dropdown-toggle(data-toggle="dropdown", href="#")
        | &nbsp;
        i.icon-white.icon-envelope
        - $count = Auth::user()->unread_notification_count()
        span(class="badge badge-inverse unread-notification-badge #{$count == 0 ? 'hide' : ''}") #{$count}
        | &nbsp;

      ul.dropdown-menu.loading#notifications-dropdown
        li.no-notifications No notifications to display.



- else:

  ul.nav
    li
      a(href="#{ route('projects') }", data-pjax) Browse Projects

  ul.nav.pull-right
    li
      a(href="#signinModal", data-toggle='modal') Sign In
