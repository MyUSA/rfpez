div.nav-collapse.collapse

- if (Auth::check()):

  ul.nav
    li(class="#{URI::is('contracts*') ? 'active':''}")
      a(href="#{ route('contracts') }") Contracts

    - if (Auth::user()->officer):
      li(class="#{URI::is('vendors') ? 'active':''}")
        a(href="#{ route('vendors') }") Vendors

  ul.nav.pull-right
    li.dropdown
      a(href="#", class="dropdown-toggle", data-toggle="dropdown")
        | #{Auth::user()->email}
        b.caret
      ul.dropdown-menu
        - if (Auth::user()->officer):
          li(class="#{URI::is('contracts/mine') ? 'active':''}")
            a(href="#{ route('my_contracts') }") My Contracts
        - endif;
        li(class="#{URI::is('account') ? 'active':''}")
          a(href="#{route('account')}") Account Settings
        li
          a(href="#{ route('signout') }") Sign Out


- else:

  ul.nav
    li(class="#{URI::is('contracts*') ? 'active':''}")
      a(href="#{ route('contracts') }") Contracts

  ul.nav.pull-right
    li(class="#{URI::is('signin') ? 'active':''}")
      a(href="#signinModal", data-toggle='modal') Sign In
