- Section::inject('page_title', $project->title)
- Section::inject('page_action', "Sections")
- Section::inject('active_subnav', 'create')
- Section::inject('active_sidebar', 'select_sections')
- Section::inject('no_page_header', true)

!{View::make('projects.partials.toolbar')->with('project', $project)}

.row-fluid
  .span3
    !{View::make('projects.partials.sow_composer_sidebar')->with('project', $project)}

  .span9

    h5 Selected Sections

    !{View::make('projects.partials.selected_sections')->with('project', $project)}

    h5 Available Sections

    span
      em Don't see what you want? In the next step you can create new sections.

    div
      input.search-query.pull-right#available-sections-filter(type="text", placeholder="Filter")

    table.table.table-striped.available-sections-table(data-project-id="#{$project->id}")
      thead
        tr
          th(width="50%") Title
          th(width="20%") Category
          th(width="15%") Times Used
          th(width="15%") Use

      tbody.loading-placeholder
        tr
          td(colspan="4") Loading...

      !{View::make('projects.partials.available_sections_tbody')->with('project', $project)->with('available_sections', $available_sections)}

    .form-actions
      a.btn.btn-primary(href="#{route('project_sections_edit', array($project->id))}") Edit Sections &rarr;