head

  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
  meta(name="description", content="")
  meta(name="viewport", content="width=device-width")

  title #{Helper::full_title(Section::yield('page_title'), Section::yield('page_action'))}

  !{HTML::style('http://fonts.googleapis.com/css?family=Telex')}
  !{Basset::show('website.css')}


  - if (Auth::guest()):
    - $body_class = "no-auth";
    - print "<style>.only-user { display: none; }</style>";
  - else:
    - $body_class = "auth " . (Auth::user()->vendor ? "vendor" : "officer");
    - print "<style>.only-user:not(.only-user-".Auth::user()->id.") { display: none; }</style>";
  - endif;

  !{HTML::script('js/vendor/modernizr-2.6.1-respond-1.1.0.min.js')}

body(class="#{$body_class}")

  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        a(class="brand", href="#{route('root')}") EasyBid

        !{View::make('partials.topnav')}


  .container

    - if (Auth::guest()):
      !{View::make('partials.signin_modal')}
    - endif;

    - if (Session::has('errors')):
      .alert.alert-error
        ul
          - foreach(Session::get('errors') as $error):
            li #{$error}
    - endif;

    - if (Session::has('notice')):
      .alert.alert-success #{Session::get('notice')}
    - endif;

    - if (!Section::yield('no_page_header'))
      h1 #{Section::yield('page_title')}
        | !{Section::yield('inside_header')}

    !{Section::yield('subnav')}

    !{$content}


  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js")
  script
    | window.jQuery || document.write('<script src="/js/vendor/jquery-1.8.1.min.js"><\/script>')

  !{Basset::show('website.js')}

  !{Section::yield('additional_scripts')}
