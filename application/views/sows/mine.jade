- Section::inject('page_title', 'My SOWs')
- Section::inject('active_nav', 'account')

- Section::start('inside_header');
  a.btn.btn-small.btn-success.pull-right(href="#{ route('new_sow') }")
    i.icon-plus-sign.icon-white
    | new SOW
- Section::stop();

table.table.my-sows-table
  thead
    tr
      th SOW Title
      th Date Created
      th Actions
  tbody
    - foreach (Auth::user()->officer->my_sows_including_collaborating_on()->get() as $sow):
      tr
        td
          a(href="#{route('sow', array($sow->id))}") #{$sow->title}
        td #{$sow->created_at}
        td
          a.btn.btn-primary(href="#") Post Contract
          a.btn.btn-danger(href="#")
            i.icon-white.icon-trash