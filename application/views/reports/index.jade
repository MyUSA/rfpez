  <img src="//chart.googleapis.com/chart?chxs=0,676767,11.167,0.333,l,676767&chxt=y&chbh=a&chs=920x120&cht=bvs&chco=F69400&chds=a&chd=t:!{implode(",", $signups_per_day_flat)}&chg=-1,0,0,4&chtt=Sign-ups+per+day+since+Jan.+18" width="920" height="120" alt="Sign-ups per day since Jan. 18" />

hr

.row
  .span-5
    h1 Projects average #{round($avg_bids_per_project, 1)} bids
    #num-bids-chart

  .span-5
    h1 Bids average $#{round($avg_price_total)}
    #price-bids-chart

script(src="http://www.google.com/jsapi")
script
  | google.load('visualization', '1', {packages: ['corechart']});
  | Rfpez.reporting_stats({ bidsPerProject : !{json_encode($bids_per_project)}, avgPrices: !{json_encode($avg_prices)}, avgPriceTotal : !{json_encode($avg_price_total)} });