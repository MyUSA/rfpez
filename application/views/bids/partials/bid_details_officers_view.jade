- if (!isset($defer)) $defer = true;

.details-inner

  - if ($bid->dismissed()):
    .alert.alert-danger.dismissed-alert
      .dismissal-notice You have dismissed this bid.
      .dismissal-reason
        strong Reason:
        span #{$bid->dismissal_reason}
      .dismissal-explanation
        strong Explanation:
        span #{$bid->dismissal_explanation}
  - endif;

  .row-fluid

    .span5.col1

      h5 Approach
      p !{$bid->approach}

      h5 Previous Work
      p !{$bid->previous_work}

      h5 Employee Details
      p !{$bid->employee_details}

      h5 Prices
      table.table
        thead
          tr
            th Deliverable
            th Price
        - if ($bid->prices):
          - foreach($bid->prices as $deliverable => $price):
            tr
              td #{$deliverable}
              td $#{$price}
        - endif;
        tfoot
          tr.info
            td Total Price
            td $#{$bid->total_price()}

    .span5.col2
      h5 #{$bid->vendor->company_name}
        a(href="#{route('vendor', array($bid->vendor->id))}") (view profile)
      !{View::make('vendors.partials.data')->with('vendor', $bid->vendor)->with('defer', true)}

      h5 Example Work
      .vendor-image-preview-frame
        img(src="#{$bid->vendor->image_url}")
