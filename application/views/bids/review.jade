- Section::inject('page_title', "$contract->title")
- Section::inject('page_action', "Review Bids")
- Section::inject('active_nav', $contract->is_mine_or_collaborates_on() ? 'account' : 'contracts')
- Section::inject('active_subnav', 'review_bids')

- if ($contract->is_mine_or_collaborates_on()):
  - Section::inject('subnav', View::make('partials.media.officer_contract_toolbar')->with('contract', $contract))
  !{View::make('bids.dismiss_modal')}
- endif;

- if (Auth::user()->officer->collaborates_on($contract->id)):
  .alert.alert-info
    | <strong>You're a collaborator on this contract.</strong> When you
    | star a bid, your contracting officer will see it too.
- endif;

h3 Bids awaiting review

table.table.bids-table.open-bids
  thead
    tr
      th.vendor-name Vendor Name
      th.price Price
      th.starred Starred
      th.actions Actions

  - foreach($open_bids as $bid):
    !{View::make('partials.media.bid_for_review')->with('bid', $bid)}

h3 Dismissed bids

table.table.bids-table.dismissed-bids
  thead
    tr
      th.vendor-name Vendor Name
      th.price Price
      th.starred Starred
      th.actions Actions

  - foreach($dismissed_bids as $bid):
    !{View::make('partials.media.bid_for_review')->with('bid', $bid)}
