- Section::inject('no_page_header', true)

!{View::make('admin.partials.subnav')->with('current_page', 'templates')}

table.table.table-bordered.table-striped.admin-template-table
  thead
    tr
      th id
      th title
      th fork_count
      th recommended
      th project_type

  tbody
    - foreach ($templates->results as $template):
      tr
        td #{$template->id}
        td #{$template->title}
        td #{$template->fork_count}
        td
          form(action="#{route('admin_template_toggle_recommended', array($template->id))}", method="POST")
            - if ($template->recommended):
              button.btn.btn-success Yes
            - else:
              button.btn No
        td #{$template->project_type->name}

.pagination-wrapper
  !{$templates->links()}