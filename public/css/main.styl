//// NIB GOODNESS ////
//// see http://visionmedia.github.com/nib/ for several other nice shortcuts ////
@import 'nib'

.clearfix
  clearfix()

//// CUSTOM SHORTHAND CONVENIENCE METHODS ////
ml(n)
  margin-left n
mr(n)
  margin-right n
mt(n)
  margin-top n
mb(n)
  margin-bottom n
pl(n)
  padding-left n
pr(n)
  padding-right n
pt(n)
  padding-top n
pb(n)
  padding-bottom n
fw(n)
  font-weight n
fs(n)
  font-size n
lh(n)
  line-height n
pos(n)
  position n
bgc(n)
  background-color n


//// MAIN STYLES ////

a
  cursor pointer

body
  pt 75px

  &.no-auth
    .vendor-only, .officer-only
      display none !important

  &.officer
    .vendor-only
      display none !important

    .no-officer
      display none !important

  &.vendor
    .officer-only
      display none !important

    .no-vendor
      display none !important

.question-wrapper
  margin-bottom 15px
  .question
    margin-bottom 5px
  .answer-question
    padding 0

#answer-question-form
  display none

.vendor-image-preview-frame
  width 400px
  height 300px
  border 1px solid #ccc
  padding 2px
  margin 5px 0 15px

  img
    z-index 2
    width 400px
    height 300px

.media

  &.vendor
    display inline-block
    margin 10px 10px 40px

    .company-name
      font-size 16px
      font-weight bold
      margin-bottom 10px

    .homepage-url
      float left

    .ballpark-price
      float right
      color #888

.vendors-wrapper
  .loading-spinner
    text-align center
    margin 0 0 35px
    display none

  .finished-loading-text
    text-align center
    margin 0 0 35px
    display none

  &.loading
    .loading-spinner
      display block

  &.finished-loading
    .finished-loading-text
      display block

.vendor-image-form-row
  margin-top 30px