//// NIB GOODNESS ////
//// see http://visionmedia.github.com/nib/ for several other nice shortcuts ////
@import 'nib'

.clearfix
  clearfix()

//// CUSTOM SHORTHAND CONVENIENCE METHODS ////
ml(n)
  margin-left n
mr(n)
  margin-right n
mt(n)
  margin-top n
mb(n)
  margin-bottom n
pl(n)
  padding-left n
pr(n)
  padding-right n
pt(n)
  padding-top n
pb(n)
  padding-bottom n
fw(n)
  font-weight n
fs(n)
  font-size n
lh(n)
  line-height n
pos(n)
  position n
bgc(n)
  background-color n


//// MAIN STYLES ////
label
  display block

a
  cursor pointer

body
  pt 75px
  mb 25px

  &.no-auth
    .vendor-only, .officer-only
      display none !important

  &.officer
    .vendor-only
      display none !important

  &.vendor
    .officer-only
      display none !important

.question-wrapper
  margin-bottom 15px
  .question
    margin-bottom 5px
  .answer-question
    padding 0

#answer-question-form
  display none

.vendor-image-preview-frame
  width 400px
  height 300px
  border 1px solid black
  padding 2px
  margin-bottom 20px

  img
    width 400px
    height 300px
