//// NIB GOODNESS ////
//// see http://visionmedia.github.com/nib/ for several other nice shortcuts ////
@import 'nib'

.clearfix
  clearfix()

//// CUSTOM SHORTHAND CONVENIENCE METHODS ////
ml(n)
  margin-left n
mr(n)
  margin-right n
mt(n)
  margin-top n
mb(n)
  margin-bottom n
pl(n)
  padding-left n
pr(n)
  padding-right n
pt(n)
  padding-top n
pb(n)
  padding-bottom n
fw(n)
  font-weight n
fs(n)
  font-size n
lh(n)
  line-height n
pos(n)
  position n
bgc(n)
  background-color n


//// MAIN STYLES ////

a
  cursor pointer

.alert
  ul
    margin-bottom 0

.main-description
  font-size 1.2em
  line-height 1.5em
  mb 30px

.larger
  font-size 1.2em
  mb 1.1em

.smaller
  font-size .8em

h1
  color #999
  font-size 1.5em
body
  pt 75px
  mb 25px

  &.no-auth
    .vendor-only, .officer-only
      display none !important

  &.officer
    .vendor-only
      display none !important

    .no-officer
      display none !important

    .no-auth-only
      display none !important

  &.vendor
    .officer-only
      display none !important

    .no-vendor
      display none !important

    .no-auth-only
      display none !important

.question-wrapper
  margin-bottom 15px
  .question
    padding-bottom 10px
  .answer
    padding-top 10px

#answer-question-form
  display none

  textarea
    width 100%
    box-sizing border-box
    min-height 100px

.vendor-image-preview-frame
  overflow hidden
  text-align center
  width 400px
  height 300px
  border 1px solid #EEE
  padding 2px
  margin 5px 0 15px

  img
    width 400px
    height 300px

.media

  &.vendor
    width 400px
    display inline-block
    vertical-align top
    margin 10px 10px 40px

    .company-name
      font-size 16px
      font-weight bold
      margin-bottom 10px

    .homepage-url
      float left

    .ballpark-price
      float right
      color #888

.vendors-wrapper
  .loading-spinner
    text-align center
    margin 0 0 35px
    display none

  .finished-loading-text
    text-align center
    margin 0 0 35px
    display none

  &.loading
    .loading-spinner
      display block

  &.finished-loading
    .finished-loading-text
      display block

.vendor-image-form-row
  margin-top 30px

.new-bid-form
  .section
    padding 5px 0

  textarea
    width 100%
    min-height 100px

  .prices-table
    .deliverables-row
      input.deliverable-price
        width 60px

.contract-list
  list-style none
  font-size 1.4em
  li
    mb 1.3em

.show-my-contracts-btn
  fs .65em
  fw normal
  pl 12px

#ask-question-form
  textarea
    width 100%
    min-height 100px
    box-sizing border-box

.contracts-table
  thead
    tr
      th.contract-title
        width 45%

      th.type
        width 30%

      th.agency
        width 25%

  tbody.contract
    border-top 1px solid #DDD

    .admin-star
      font-size 11px

      i
        line-height 12px
        margin-top -1px

  tr
    td
      border 0

#dismiss-modal
  textarea
    width 100%
    box-sizing border-box
    min-height 100px

.bids-table
  width 100%

  thead
    th.vendor-name
      width 50%
    th.price
      width 10%
    th.starred
      width 15%
    th.actions
      width 25%

  .bid
    .star-td
      .unstar-button
        display none

      &.starred
        .unstar-button
          display inline-block

        .star-button
          display none

    .bid-details
      border 0
      padding 0

      div
        margin-left 4px

        .details-inner
          margin-bottom 10px

      .example-work
        padding-left 20px

.dismissed-alert
  .dismissal-notice
    border-bottom 1px dotted #ccc
    padding-bottom 10px

  .dismissal-reason
    padding-top 10px

.fit3wells
  .span4
    width 250px

.notification-list
  margin 0

.notification-item
  list-style none
  padding 10px 0 10px 30px
  position relative

  &.unread
    font-weight bold

    .unread-button-wrapper
      display block

    .read-button-wrapper
      display none !important

  &:hover
    .read-button-wrapper
      display block

  .unread-button-wrapper, .read-button-wrapper
    position absolute
    top 28px
    left 0

  .unread-button-wrapper
    display none

  .read-button-wrapper
    display none

  .line2
    color #999
    font-weight normal

  .timestamp
    font-weight normal

.notification-nav-item
  position relative

  .unread-notification-badge
    position absolute
    top 7px
    right -10px

.btn-circle
  border-radius 6px
  padding 0
  height 12px
  width 12px

.my-bid-table
  tr.bid
    &.bid-dismissed
      td.status
        color red