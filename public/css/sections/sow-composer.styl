.new-project-page
  width 500px
  margin 0 auto

ul.templates-list
  margin 0

  li.template
    list-style none

  li.no-templates
    width 400px
    margin 0 auto 30px
    list-style none

.sections-for-editing-wrapper
  position relative

.sections-for-editing
  cursor pointer

  .category

    &.ui-sortable-placeholder
      background-color #ccc
      visibility visible !important

    .category-sections
      .section
        &.ui-sortable-placeholder
          background-color #ccc
          visibility visible !important

        .edit-section-link, .remove-button
          display none

        &:hover
          .edit-section-link, .remove-button
            display inline

.sections-for-editing-cover
  background rgba(255, 255, 255, 0.6)
  z-index 2
  position absolute
  top 0
  left 0
  text-align center
  padding-top 100px
  font-size 16px
  font-weight bold

.timeline-table
  width 600px

  tbody
    tr
      .add-deliverable-button
        display none

  tfoot
    background #ddd

    tr
      .remove-deliverable-button
        display none

.sow-sidebar
  width 200px
  margin 0 0 20px
  border-radius 6px
  pl 0

  li
    a
      display block
      margin 0 0 -1px
      padding 8px 14px
      border 1px solid #E5E5E5

      .icon-chevron-right
        opacity .5
        float right
        mt 2px
        mr -6px

    &.active
      .icon-chevron-right
        opacity 1

#edit-section-modal
  textarea
    width 100%
    box-sizing border-box
    min-height 140px

.available-sections-table
  .loading-placeholder
    display none

  &.loading
    .available-sections-tbody
      display none

    .loading-placeholder
      display table-row-group