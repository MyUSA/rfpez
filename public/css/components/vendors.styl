.media.vendor
  width 400px
  display inline-block
  vertical-align top
  margin 10px 10px 40px

  .company-name
    font-size 16px
    font-weight bold
    margin-bottom 10px

  .homepage-url
    float left

  .ballpark-price
    float right
    color #888

  .more-info
    line-height 1.5em
